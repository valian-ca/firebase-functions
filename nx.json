{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "release": {
    "projects": ["packages/*"],
    "changelog": {
      "projectChangelogs": true,
      "workspaceChangelog": {
        "file": false,
        "createRelease": "github"
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": ["default"],
    "sharedGlobals": []
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "type-check"
        },
        "build": false
      }
    }
  ]
}
